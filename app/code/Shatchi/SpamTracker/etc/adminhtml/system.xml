<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="shatchi" translate="label" sortOrder="100">
            <label>Shatchi</label>
        </tab>
        <section id="spamtracker" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Spam Tracker</label>
            <tab>shatchi</tab>
            <resource>Shatchi_SpamTracker::config_spamtracker</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="spam_email_patterns" translate="label comment" type="textarea" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Spam Email Patterns</label>
                    <comment>Enter keywords to detect spam emails (comma-separated, case-insensitive). Example: spam, test, christmasthemusicalschoolhouse</comment>
                </field>
            </group>
        </section>
    </system>
</config>