<script>
    require(['jquery', 'lazyload'], function($) {
        $(document).ready(function() {
            function makeNavDraggableYOnly(navEl, containerEl) {
                let startY = 0;
                let isDragging = false;
                let moved = false;
                let startX = 0;
                let targetEl = null;

                function onStart(e) {
                    isDragging = true;
                    moved = false;

                    if (e.type.startsWith('touch')) {
                        startY = e.touches[0].clientY;
                        startX = e.touches[0].clientX;
                        targetEl = e.target.closest('a');
                    } else {
                        startY = e.clientY;
                        startX = e.clientX;
                    }

                    document.addEventListener('mousemove', onMove);
                    document.addEventListener('mouseup', onEnd);
                    document.addEventListener('touchmove', onMove, {
                        passive: false
                    });
                    document.addEventListener('touchend', onEnd);
                }

                function onMove(e) {
                    if (!isDragging) return;

                    let currentY = e.type.startsWith('touch') ? e.touches[0].clientY : e.clientY;
                    let deltaY = currentY - startY;

                    if (Math.abs(deltaY) > 4) moved = true;

                    moveToY(deltaY);
                    startY = currentY;

                    if (e.cancelable) e.preventDefault(); // Prevent scrolling
                }

                function onEnd(e) {
                    if (!moved && targetEl) {
                        // Simulate click only on touch devices and if it wasn‚Äôt a drag
                        if (e.type === 'touchend') {
                            e.preventDefault();
                            targetEl.click();
                        }
                    }

                    isDragging = false;
                    moved = false;
                    targetEl = null;

                    document.removeEventListener('mousemove', onMove);
                    document.removeEventListener('mouseup', onEnd);
                    document.removeEventListener('touchmove', onMove);
                    document.removeEventListener('touchend', onEnd);
                }

                navEl.addEventListener('mousedown', onStart);
                navEl.addEventListener('touchstart', onStart);

                function moveToY(deltaY) {
                    let newTop = navEl.offsetTop + deltaY;
                    const maxTop = containerEl.clientHeight - navEl.offsetHeight;
                    newTop = Math.max(0, Math.min(maxTop, newTop));
                    navEl.style.top = newTop + 'px';
                }
            }


            const nav = document.getElementById("draggableNav");
            const container = document.getElementById("container25");
            if (nav && container) {
                makeNavDraggableYOnly(nav, container);
                // console.log("Draggable initialized");
            } else {
                console.error("Nav or container not found");
            }
        });
    });
</script>


