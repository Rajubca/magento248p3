        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="chunk_generate" xsi:type="object">Shatchi\SearchFilter3\Console\Command\GenerateChunksCommand</item>
            </argument>
        </arguments>
    </type>

    <type name="Shatchi\SearchFilter3\Model\ChunkGenerator">
        <arguments>
            <argument name="layoutFactory" xsi:type="object">Magento\Framework\View\LayoutFactory</argument>
        </arguments>
    </type>

    <type name="Shatchi\SearchFilter3\Console\Command\GenerateChunksCommand">
        <arguments>
            <argument name="chunkGenerator" xsi:type="object">Shatchi\SearchFilter3\Model\ChunkGenerator</argument>
            <argument name="categoryCollectionFactory" xsi:type="object">Magento\Catalog\Model\ResourceModel\Category\CollectionFactory</argument>
        </arguments>
    </type>
