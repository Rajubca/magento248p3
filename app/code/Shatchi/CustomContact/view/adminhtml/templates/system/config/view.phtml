<!-- Scripts -->
<script>
    function adminShowModal(src) {
        document.getElementById('adminModalImage').src = src;
        document.getElementById('adminImageModal').style.display = 'flex';
    }

    function adminCloseModal() {
        document.getElementById('adminImageModal').style.display = 'none';
        document.getElementById('adminModalImage').src = '';
    }

    function filterTable() {
        const search = document.getElementById("searchInput").value.toLowerCase();
        const fromDate = document.getElementById("fromDate").value;
        const toDate = document.getElementById("toDate").value;
        const rows = document.querySelectorAll("#supportTable tbody tr");

        rows.forEach(row => {
            const rowText = row.textContent.toLowerCase();
            const dateText = row.cells[8]?.textContent?.trim(); // Created At column
            let isVisible = true;

            // Search match
            if (!rowText.includes(search)) {
                isVisible = false;
            }

            // Date filter match
            if (fromDate || toDate) {
                const rowDate = new Date(dateText);
                const from = fromDate ? new Date(fromDate) : null;
                const to = toDate ? new Date(toDate) : null;

                if ((from && rowDate < from) || (to && rowDate > to)) {
                    isVisible = false;
                }
            }

            row.style.display = isVisible ? "" : "none";
        });
    }
</script>
