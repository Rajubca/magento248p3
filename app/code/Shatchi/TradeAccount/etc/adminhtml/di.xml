<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework/ObjectManager/etc/config.xsd">
    
    <!-- Plugin for saving custom customer attributes -->
    <type name="Magento\Customer\Api\CustomerRepositoryInterface">
        <plugin name="shatchi_tradeaccount_save" type="Shatchi\TradeAccount\Plugin\Customer\Save" />
    </type>
    <!-- For saving using Ajax -->
    <type name="Magento\Customer\Controller\Adminhtml\Index\InlineEdit">
        <plugin name="shatchi_tradeaccount_inline_edit" type="Shatchi\TradeAccount\Plugin\Customer\InlineEditPlugin"/>
    </type>
    <!-- This is for export logic -->
    <type name="Magento\Customer\Model\ResourceModel\Grid\Collection">
        <plugin name="add_custom_attributes_to_grid" type="Shatchi\TradeAccount\Plugin\Customer\CustomerGridCollection"/>
    </type>
    
   </config>
